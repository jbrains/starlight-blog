---
import { Markdown } from 'astro-remote'

import { getBlogEntryPreviewContent, type StarlightBlogEntry } from '../libs/content'
import type { Locale } from '../libs/i18n'
import { getPathWithLocale, getRelativeUrl } from '../libs/page'

import Metadata from './Metadata.astro'
import PostTags from './PostTags.astro'

interface Props {
  entry: StarlightBlogEntry
  locale: Locale
}

const { entry, locale } = Astro.props

const PreviewContent = await getBlogEntryPreviewContent(entry)
const postRelativeUrl = getRelativeUrl(`/${getPathWithLocale(entry.id, locale)}`)
---

<article class="preview">
  <header>
    <h2>
      <a href={postRelativeUrl}>{entry.data.title}</a>
    </h2>
    <Metadata entry={entry} {locale} />
  </header>
  <div class="sl-markdown-content">
    {
      typeof PreviewContent.summary === 'string' ? (
        <Markdown content={PreviewContent.summary} />
      ) : typeof PreviewContent.excerpt === 'string' ? (
        <Markdown content={PreviewContent.excerpt} />
      ) : (
        <p>There is no preview available for this article.</p>
      )
    }
    <p><a href={postRelativeUrl}>Read more...</a></p>
  </div>
  <footer>
    <PostTags {entry} {locale} />
  </footer>
</article>

<style>
  .preview {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  h2 {
    margin-bottom: 1.5rem;
  }

  h2 a {
    text-decoration: none;
  }
</style>
